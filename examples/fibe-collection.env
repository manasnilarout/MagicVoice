# Fibe NBFC Collection Agent Configuration Example
# Copy this to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Twilio Configuration  
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# Application Configuration
APP_NAME=Fibe Collection Assistant
APP_DESCRIPTION=Automated loan collection assistance for Fibe NBFC
PORT=3000

# Bot Configuration
DEFAULT_LANGUAGE=hindi
BOT_VOICE=alloy
BOT_MODEL=gpt-4o-realtime-preview
BOT_TEMPERATURE=0.7

# Fibe Collection Agent Persona
BOT_PERSONA_TYPE=fibe_collection_agent
BOT_NAME=Collection Assistant
BOT_ROLE=Loan Recovery Specialist
COMPANY_NAME=Fibe NBFC
BOT_TONE=professional

# Feature Configuration
ALLOW_INTERRUPTION=true
ENABLE_LOGGING=true
RECORD_CALLS=true
MAX_CALL_DURATION=900