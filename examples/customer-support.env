# Customer Support Configuration Example
# Copy this to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Twilio Configuration  
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# Application Configuration
APP_NAME=Customer Support Assistant
APP_DESCRIPTION=AI-powered customer support for technical assistance
PORT=3000

# Bot Configuration
DEFAULT_LANGUAGE=english
BOT_VOICE=marin
BOT_MODEL=gpt-4o-realtime-preview
BOT_TEMPERATURE=0.8

# Customer Support Persona
BOT_PERSONA_TYPE=customer_support
BOT_NAME=Support Agent
BOT_ROLE=Customer Support Specialist
COMPANY_NAME=Tech Solutions Inc
BOT_TONE=empathetic

# Feature Configuration
ALLOW_INTERRUPTION=true
ENABLE_LOGGING=true
RECORD_CALLS=false
MAX_CALL_DURATION=1200